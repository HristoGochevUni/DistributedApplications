<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <meta http-equiv="X-UA-Compatible" content="IE=edge"/>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css"/>
    @if (IsSectionDefined("Scripts"))
    {
        @await RenderSectionAsync("Scripts", false)
    }
    <title>@ViewData["Title"]</title>
</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow">
        <div class="container">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">RigMag</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" asp-controller="Rigs" asp-action="Browse">Rigs</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Rig parts
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <li>
                                <a class="dropdown-item" asp-route-type="Cooler" asp-controller="RigParts" asp-action="Browse">Coolers</a>
                            </li>
                            <li>
                                <a class="dropdown-item" asp-route-type="CPU" asp-controller="RigParts" asp-action="Browse">CPUs</a>
                            </li>
                            <li>
                                <a class="dropdown-item" asp-route-type="Drive" asp-controller="RigParts" asp-action="Browse">Drives</a>
                            </li>
                            <li>
                                <a class="dropdown-item" asp-route-type="GPU" asp-controller="RigParts" asp-action="Browse">GPUs</a>
                            </li>
                            <li>
                                <a class="dropdown-item" asp-route-type="Motherboard" asp-controller="RigParts" asp-action="Browse">Motherboards</a>
                            </li>
                            <li>
                                <a class="dropdown-item" asp-route-type="PCCase" asp-controller="RigParts" asp-action="Browse">PC Cases</a>
                            </li>
                            <li>
                                <a class="dropdown-item" asp-route-type="PSU" asp-controller="RigParts" asp-action="Browse">PSUs</a>
                            </li>
                            <li>
                                <a class="dropdown-item" asp-route-type="RAM" asp-controller="RigParts" asp-action="Browse">RAMs</a>
                            </li>
                        </ul>
                    </li>
                </ul>
                @if (IsSectionDefined("SearchForm"))
                {
                    @await RenderSectionAsync("SearchForm", false)
                }
            </div>
        </div>
    </nav>
</header>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2021 - RigMag - <a href="#">Privacy</a>
    </div>
</footer>
</body>
</html>