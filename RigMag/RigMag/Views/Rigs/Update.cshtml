@model RigVM

@{
    ViewData["Title"] = $"Rig edit";
}

<h1>Edit rig</h1>

<form method="post" asp-action="Update" class="mt-3">
    <div class="form-group row">
        <label asp-for="Name" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Name" class="form-control" required>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Price" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Price" type="number" step="0.01" class="form-control" required>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="IssuedOn" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="IssuedOn" type="date" class="form-control">
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Warranty" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Warranty" type="number" class="form-control">
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Cooler</label>
        <div class="col-sm-10">
            <select required asp-for="CoolerId" class="form-control" asp-items="ViewBag.Coolers">
            </select>
            <span asp-validation-for="CoolerId" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">CPU</label>
        <div class="col-sm-10">
            <select required asp-for="CpuId" class="form-control" asp-items="ViewBag.Cpus">
            </select>
            <span asp-validation-for="CpuId" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Drive</label>
        <div class="col-sm-10">
            <select required asp-for="DriveId" class="form-control" asp-items="ViewBag.Drives">
            </select>
            <span asp-validation-for="DriveId" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">GPU</label>
        <div class="col-sm-10">
            <select required asp-for="GpuId" class="form-control" asp-items="ViewBag.Gpus">
            </select>
            <span asp-validation-for="GpuId" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Motherboard</label>
        <div class="col-sm-10">
            <select required asp-for="MotherboardId" class="form-control" asp-items="ViewBag.Motherboards">
            </select>
            <span asp-validation-for="MotherboardId" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Case</label>
        <div class="col-sm-10">
            <select required asp-for="PcCaseId" class="form-control" asp-items="ViewBag.PcCases">
            </select>
            <span asp-validation-for="PcCaseId" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">PSU</label>
        <div class="col-sm-10">
            <select required asp-for="PsuId" class="form-control" asp-items="ViewBag.Psus">
            </select>
            <span asp-validation-for="PsuId" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">RAM</label>
        <div class="col-sm-10">
            <select required asp-for="RamId" class="form-control" asp-items="ViewBag.Rams">
            </select>
            <span asp-validation-for="RamId" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Description" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <textarea asp-for="Description"  class="form-control"> </textarea>
        </div>
    </div>

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Update</button>
            <a asp-action="Browse" class="btn btn-primary">Cancel</a>
        </div>
    </div>
</form>