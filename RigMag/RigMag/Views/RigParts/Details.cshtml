@model RigPartVM

@{
    ViewData["Title"] = $"{Model.Type} view";
}


<div class="row justify-content-center m-3">
    <div class="col-sm-6">
        <div class="card">
            <div class="card-header">
                <h1>@Model.Name</h1>
            </div>

            <div class="card-body text-center">
                <img class="card-img-top " src="@Model.ImagePath"/>

                <h4 class="card-text text-left">Price: @Model.Price</h4>
                @if (Model.IssuedOn != null)
                {
                    <h4 class="card-text text-left">Issued on: @Model.IssuedOn</h4>
                }
                @if (Model.Warranty != null)
                {
                    <h4 class="card-text text-left">Warranty: @Model.Warranty years</h4>
                }
                @if (Model.Description != null)
                {
                    <h4 class="card-text text-left">Description:</h4>
                    <br/>
                    <p class="lead card-text text-left">@Model.Description</p>
                }
            </div>
            <div class="card-footer text-center form-inline justify-content-center">
                <a asp-controller="RigParts" asp-action="Browse"  asp-route-type="@Model.Type" class="btn btn-primary m-1">Back</a>
                <a asp-controller="RigParts" asp-action="Update" asp-route-id="@Model.Id" asp-route-type="@Model.Type" class="btn btn-primary m-1">Edit</a>
                <form method="post" asp-action="Delete" asp-route-type="@Model.Type" asp-route-id="@Model.Id">
                    <button type="submit" class="btn btn-danger m-1">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>