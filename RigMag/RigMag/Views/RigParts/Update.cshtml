@model RigPartVM

@{
    ViewData["Title"] = $"{Model.Type} edit";
}

<h1>Edit @Model.Type</h1>

<form method="post" asp-action="Update" class="mt-3">
    <input asp-for="Type" class="form-control" type="hidden" required>
    <div class="form-group row">
        <label asp-for="Name" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Name" class="form-control" required>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Price" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Price" type="number" step="0.01" class="form-control" required>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="IssuedOn" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="IssuedOn" type="date" class="form-control">
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Warranty" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Warranty" type="number" class="form-control">
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Description" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <textarea asp-for="Description"  class="form-control"> </textarea>
        </div>
    </div>

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Update</button>
            <a asp-action="Browse" asp-route-type="@Model.Type" class="btn btn-primary">Cancel</a>
        </div>
    </div>
</form>